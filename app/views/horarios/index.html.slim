.content-eps-landing-dash
  .title
    .container
      h2  Lista de Turnos

#contacts-form
  .content-contacts-form
    .container
      .row
        .btn.btn-default
          = link_to 'Ir Administracion', admin_system_index_path, target: "blank"
        .new-contact-button.btn.btn-primary
          = link_to 'Nuevo Turno', new_horario_path, target: "blank"

        .table-responsive
          table.table.table-striped
            thead
              tr
                th Medico
                th Consultorio
                th Turno (24h)
                th Estado
                th colspan="3"

            tbody
              - @horarios.each do |horario|
                tr
                  td = horario.medico
                  td = horario.consultorio
                  td = horario.turno
                  td
                    - if horario.estado == "A"
                      | Activo
                    -else
                      | Inactivo
                  td.btn-crud
                    .btn.btn-primary
                      = link_to horario, target: "blank"
                        i.fa.fa-eye
                  td.btn-crud
                    .btn.btn-success
                      = link_to edit_horario_path(horario), target: "blank"
                        i.fa.fa-pencil-square-o
                  td.btn-crud
                    = button_to horario, method: :delete, data: {:confirm => 'Are you sure?'}, class: "btn btn-danger"
                      i.fa.fa-trash
        br
