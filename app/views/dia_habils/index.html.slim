.content-eps-landing-dash
  .title
    .container
      h2  Lista de Dias

#contacts-form
  .content-contacts-form
    .container
      .row
        .btn.btn-default
          = link_to 'Ir Administracion', admin_system_index_path, target: "blank"
        - if @reload_button
          .reload.btn.btn-default
            = link_to 'Dias', dia_habils_path, target: "blank"

        / .search-main
        /   .search-right
        /     form action="/search_user"
        /       input.btn.btn-info type="submit" value="Search"
        /       input.form-control type="text" name="name" placeholder="Buscar por nombre"

        .table-responsive
          table.table.table-striped
            thead
              tr
                th Nombre
                th Estado
                th colspan="3"

            tbody
              - @dia_habils.each do |dia_habil|
                tr
                  td.dos_campos_name = dia_habil.nombre
                  td.dos_campos_estado
                    -if dia_habil.estado == "A"
                      | Activo
                    -else
                      | Inactivo
                  td.btn-crud
                    .btn.btn-primary
                      = link_to dia_habil, target: "blank"
                        i.fa.fa-eye
                  td.btn-crud
                    .btn.btn-success
                      = link_to edit_dia_habil_path(dia_habil), target: "blank"
                        i.fa.fa-pencil-square-o
                  / td.btn-crud
                  /   = button_to dia_habil, method: :delete, data: {:confirm => 'Are you sure?'}, class: "btn btn-danger"
                  /     i.fa.fa-trash

        br
