#contacts-form
  .content-contacts-form
    .container
      .row
        h1 Lista de Dias

        .btn.btn-default
          = link_to 'Ir Administracion', admin_system_index_path
        - if @reload_button
          .reload.btn.btn-default
            = link_to 'Ver Lista de Dias', dia_habils_path

        / .search-main
        /   .search-right
        /     form action="/search_user"
        /       input.btn.btn-info type="submit" value="Search"
        /       input.form-control type="text" name="name" placeholder="Buscar por nombre"

        .table-responsive
          table.table.table-striped
            thead
              tr
                th Nombre
                th Estado
                th colspan="3"

            tbody
              - @dia_habils.each do |dia_habil|
                tr
                  td.dos_campos_name = dia_habil.nombre
                  td.dos_campos_estado = dia_habil.estado
                  td
                    .btn.btn-primary
                      = link_to 'Ver', dia_habil
                  td
                    .btn.btn-success
                      = link_to 'Editar', edit_dia_habil_path(dia_habil)
                  /td
                   / = button_to 'Eliminar', dia_habil, method: :delete, data: {:confirm => 'Are you sure?'}, class: "btn btn-danger"

        br
