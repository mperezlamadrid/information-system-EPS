.content-eps-landing-dash
  .title
    .container
      h2  Lista de Citas

#contacts-form
  .content-contacts-form
    .container
      .row
        .btn.btn-default
          = link_to 'Ir Recepcion', recepcion_index_path, target: "blank"
        .new-contact-button.btn.btn-primary
          = link_to 'Nueva Cita', new_citum_path, target: "blank"

        .table-responsive
          table.table.table-striped
            thead
              tr
                th Fecha
                th Horario
                th Paciente
                th Especialidad
                th Tipo
                th Estado
                th colspan="3"

            tbody
              - @cita.each do |citum|
                tr
                  td = citum.fecha
                  td = citum.horario
                  td = citum.paciente
                  td = citum.especialidad
                  td = citum.tipo
                  td
                    - if citum.estado == "A"
                      | Activo
                    -else
                      | Inactivo
                  td
                    .btn.btn-primary
                      = link_to 'Ver', citum, target: "blank"
                  td
                    .btn.btn-success
                      = link_to 'Editar', edit_citum_path(citum), target: "blank"
                  td
                    = button_to 'Eliminar', citum, method: :delete, data: {:confirm => 'Are you sure?'}, class: "btn btn-danger"

        br
