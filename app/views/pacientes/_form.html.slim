= form_for @paciente do |f|
  - if @paciente.errors.any?
    #error_explanation
      h2 = "#{pluralize(@paciente.errors.count, "error")} prohibited this paciente from being saved:"
      ul
        - @paciente.errors.full_messages.each do |message|
          li = message

  .container
    .container_forms
      .panel.panel-default
        .panel-heading
          h4 Informacion del Paciente
        .panel-body
          .form
            .field.form-group
              = f.label :tipo_documento
              = f.text_field :tipo_documento, class: "form-control"
            .field.form-group
              = f.label :Documento
              = f.text_field :documento, class: "form-control"
            .field.form-group
              = f.label :Primer_nombre
              = f.text_field :pri_nombre, class: "form-control"
            .field.form-group
              = f.label :Segundo_nombre
              = f.text_field :seg_nombre, class: "form-control"
            .field.form-group
              = f.label :Primer_apellido
              = f.text_field :pri_apellido, class: "form-control"
            .field.form-group
              = f.label :Segundo_apellido
              = f.text_field :seg_apellido, class: "form-control"
            .field.form-group
              = f.label :Feche_de_Nacimiento
              = f.date_select :nacimiento, class: "form-control"
            .field.form-group
              = f.label :Genero
              = f.select :genero, options_for_select([['M', 1],['F', 2]]), {}, { class: 'form-control selectpicker', placeholder: 'Ingrese el genero del paciente' }
            .field.form-group
              = f.label :Direccion
              = f.text_field :direccion, class: "form-control"
            .field.form-group
              = f.label :Telefono
              = f.text_field :telefono, class: "form-control"
            .field.form-group
              = f.label :Regimen
              = f.select :regimen, options_for_select([['Subsidiado', 1],['Contributivo', 2]]), {}, { class: 'form-control selectpicker', placeholder: 'Regimen' }
            .field.form-group
              = f.label :Numero_de_ficha_del_sisben
              = f.text_field :num_ficha_sisben, class: "form-control"
            .field.form-group
              = f.label :Estado
              = f.select :estado, options_for_select([['A', 1],['I', 2]]), {}, { class: 'form-control selectpicker', placeholder: 'Estado del paciente' }
            .sign-button
              = f.submit
